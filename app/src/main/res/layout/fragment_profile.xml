<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewUser"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorWhite"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                tools:style="@style/CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/imgUser"
                        android:text="TP038091"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textUser"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/imgUser"
                        android:text="TP038091@mail.apu.edu.my" />

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/apu_logo" />

                    <ImageView
                        android:id="@+id/imgExit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_exit"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="5dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewViewer"
                android:layout_width="180dp"
                android:layout_height="85dp"
                android:layout_below="@id/cardViewUser"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                tools:style="@style/CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <TextView
                        android:id="@+id/textViewers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/imgViewer"
                        android:text="1754"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewers"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/imgViewer"
                        android:text="Viewers" />

                    <ImageView
                        android:id="@+id/imgViewer"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_viewer" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewProduct"
                android:layout_width="180dp"
                android:layout_height="85dp"
                android:layout_below="@+id/cardViewUser"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/cardViewViewer"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                tools:style="@style/CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <TextView
                        android:id="@+id/textItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/imgProduct"
                        android:text="3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textItems"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/imgProduct"
                        android:text="Items" />

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_product" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewRecentActivity"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/cardViewViewer"
                android:layout_marginTop="8dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textRecentActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Recent Activity"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/textRecentActivity"
                        android:background="@color/colorDarkGray"></View>

                    <ScrollView
                        android:id="@+id/scrollRecentActivity"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">


                    </ScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/scrollRecentActivity"
                        android:background="@color/colorGrayLight"></View>

                    <TextView
                        android:id="@+id/textSeeMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scrollRecentActivity"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="See More"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/viewTopSetting"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cardViewRecentActivity"
                android:layout_marginTop="8dp"
                android:background="@color/colorDarkGray"></View>

            <RelativeLayout
                android:id="@+id/layoutSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTopSetting"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/imgSetting"
                    android:text="Settings"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgSetting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_setting" />

            </RelativeLayout>

            <View
                android:id="@+id/viewTopReport"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/layoutSetting"
                android:background="@color/colorDarkGray"></View>


            <RelativeLayout
                android:id="@+id/layoutReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTopReport"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/imgReport"
                    android:text="Report"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgReport"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_report" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/layoutReport"></View>

        </RelativeLayout>

    </ScrollView>


</FrameLayout>