<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVITY"
        android:layout_marginTop="@dimen/list_item_activity_for_user_margin_big"
        android:layout_marginBottom="@dimen/list_item_activity_for_user_margin_big"
        android:layout_marginLeft="@dimen/list_item_activity_for_user_margin_normal"
        android:layout_toLeftOf="@+id/textActivityDate"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textActivityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:layout_marginTop="@dimen/list_item_activity_for_user_margin_big"
        android:layout_marginBottom="@dimen/list_item_activity_for_user_margin_big"
        android:layout_marginRight="@dimen/list_item_activity_for_user_margin_normal"
        android:layout_alignParentRight="true"/>

</RelativeLayout>